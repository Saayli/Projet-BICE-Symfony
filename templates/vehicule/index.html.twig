{% extends 'base.html.twig' %}

{% block title %}Hello InterventionController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Bienvenue sur le site de gestion de matériels, d'interventions et de véhicules : le projet BICE !</h1>
        <table class="table table-striped">
            <tr>
                <th>Dénomination</th>
                <th>Numéro</th>
                <th>Immatriculation</th>
                <th></th>
            </tr>
            {% for v in vehicules %}
                {% if v.estActive == true %}
                <tr>
                    <td>{{ v.denomination}}</td>
                    <td>{{ v.numero }}</td>
                    <td>{{ v.immatriculation }}</td>
                    <td><a href="{{ path("vehicule_modifier", {"id":v.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path("vehicule_supprimer", {"id":v.id}) }}" class="btn btn-danger">Supprimer</a></td>
                    {% endif %}

                </tr>
            {% endfor %}
        </table>
        <h2>Ajouter un véhicule</h2>
        {{ form(formulaire) }}
    </div>
{% endblock %}